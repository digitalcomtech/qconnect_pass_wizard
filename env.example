# QConnect PASS Wizard Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=qa
TEST_MODE=false
ENABLE_CONFIRMATION_FALLBACK=true

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080
HOST=0.0.0.0

# =============================================================================
# AUTHENTICATION SECRETS
# =============================================================================
# Generate a strong random string for JWT_SECRET
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# Generate a strong random string for SESSION_SECRET
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# =============================================================================
# PRODUCTION ENVIRONMENT TOKENS
# =============================================================================
PROD_PEGASUS_BASE_URL=https://qservices.pegasusgateway.com
PROD_PEGASUS_TOKEN=your-production-pegasus-token-here
PROD_PEGASUS1_TOKEN=your-production-pegasus1-token-here
PROD_PEGASUS256_TOKEN=your-production-pegasus256-token-here
PROD_ZAPIER_HOOK_INSTALL=https://hooks.zapier.com/hooks/catch/21949880/uyym1m7/
PROD_ZAPIER_HOOK_SECRET=your-production-secondary-zapier-hook-here

# =============================================================================
# QA ENVIRONMENT TOKENS
# =============================================================================
QA_PEGASUS_BASE_URL=https://qservices.pegasusgateway.com/qa
QA_PEGASUS_TOKEN=your-qa-pegasus-token-here
QA_PEGASUS1_TOKEN=your-qa-pegasus1-token-here
QA_PEGASUS256_TOKEN=your-qa-pegasus256-token-here
QA_ZAPIER_HOOK_INSTALL=https://hooks.zapier.com/hooks/catch/21949880/u6nixws/
QA_ZAPIER_HOOK_SECRET=your-qa-secondary-zapier-hook-here

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_TIMEOUT=30000
API_MAX_RETRIES=3
API_RETRY_DELAY=1000
API_RETRY_MULTIPLIER=2

# =============================================================================
# WORKFLOW CONFIGURATION
# =============================================================================
PROXIMITY_RADIUS=200
MAX_DEVICE_WAIT_TIME=1800000
INITIAL_POLL_INTERVAL=10000
MAX_POLL_INTERVAL=120000

# =============================================================================
# SIM CARD CONFIGURATION
# =============================================================================
SIM_SUPER_PREFIX=8988
SIM_WIRELESS_PREFIX=8901
SIM_SUPER_ENDPOINT=https://api.pegasusgateway.com/m2m/supersims/v1/Sims
SIM_WIRELESS_ENDPOINT=https://api.pegasusgateway.com/m2m/wireless/v1/Sims

# =============================================================================
# PEGASUS API CONFIGURATION
# =============================================================================
PEGASUS_BASE_URL=https://api.pegasusgateway.com
